<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CharacterSheet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/activePrimary</item>
        <item name="colorPrimaryVariant">@color/activeSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/raw_teal_200</item>
        <item name="colorSecondaryVariant">@color/raw_teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Box">
        <item name="android:layout_margin">@dimen/spacing_1</item>
        <item name="android:padding">@dimen/spacing_1</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="Card">
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardElevation">1dp</item>
        <item name="cardMaxElevation">1dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@color/backgroundCard</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="Input">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Text">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:layout_margin">@dimen/spacing_1</item>
        <item name="android:paddingTop">@dimen/spacing_1</item>
        <item name="android:paddingBottom">@dimen/spacing_1</item>
        <item name="android:paddingStart">@dimen/spacing_2</item>
        <item name="android:paddingEnd">@dimen/spacing_2</item>
    </style>

    <style name="Text.Header">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Label">
        <item name="android:textSize">@dimen/text_size_secondary</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Text.Label.Primary">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Text.Label.Secondary">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Text.Description">
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Text.Value">
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="Text.Value.Primary">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Text.Value.Secondary">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Button" parent="Text">
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:textColor">@color/text_color_button</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:padding">@dimen/spacing_1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Positive">
        <item name="android:background">@drawable/btn_positive</item>
    </style>

    <style name="Button.Negative">
        <item name="android:background">@drawable/btn_negative</item>
    </style>

    <style name="Button.Fab">
        <item name="fab_colorNormal">@color/buttonBackgroundPositiveEnabled</item>
    </style>

    <style name="Button.Fab.Menu">
        <item name="android:background">@null</item>
        <item name="menu_colorNormal">@color/buttonBackgroundPositiveEnabled</item>
    </style>

    <style name="Button.Fab.Item">
        <item name="fab_size">mini</item>
    </style>

    <style name="Progress">
        <item name="background">@drawable/bg_circle_card</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_circle_card</item>
        <item name="android:elevation">@dimen/spacing_2</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="Theme.CharacterSheet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CharacterSheet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CharacterSheet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>