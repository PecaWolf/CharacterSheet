<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/Box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_input_header"
            style="@style/Text.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/text_input_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Placeholder header" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_input_message"
            style="@style/Text.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_2"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/text_input_button_negative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_input_header"
            tools:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Curabitur bibendum justo non orci." />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_1"
            android:layout_marginBottom="@dimen/spacing_2"
            android:gravity="top|start"
            app:layout_constraintBottom_toTopOf="@id/text_input_button_negative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_input_message"
            tools:hint="Placeholder hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_input"
                style="@style/Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam rhoncus fermentum ullamcorper. Donec ut risus sed tortor rutrum tristique quis at sapien. Curabitur dignissim, risus vel rhoncus tincidunt, augue odio luctus turpis, ut feugiat felis arcu ut libero. Pellentesque malesuada lorem id pretium sodales. Phasellus interdum felis id." />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/text_input_button_negative"
            style="@style/Button.Negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/generic_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_input_button_positive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_input_input_layout" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/text_input_button_positive"
            style="@style/Button.Positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/generic_ok"
            app:layout_constraintBottom_toBottomOf="@id/text_input_button_negative"
            app:layout_constraintTop_toTopOf="@id/text_input_button_negative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_input_button_negative" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>