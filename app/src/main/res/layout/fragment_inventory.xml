<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/spacing_1"
    tools:context=".ui.inventory.InventoryFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/loadout_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.50" />

            <TextView
                android:id="@+id/current_loadout_label"
                style="@style/Text.Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginTop="@dimen/spacing_2"
                android:text="@string/current_loadout"
                app:layout_constraintEnd_toEndOf="@id/guide_50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.pecawolf.charactersheet.ui.view.TwoStateImageView
                android:id="@+id/loadout_combat"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:src="@drawable/ic_loadout_combat_inactive"
                app:checkedSrc="@drawable/ic_loadout_combat_active"
                app:isActive="false"
                app:layout_constraintBottom_toBottomOf="@+id/current_loadout_label"
                app:layout_constraintEnd_toStartOf="@id/loadout_social"
                app:layout_constraintStart_toStartOf="@id/guide_50"
                app:layout_constraintTop_toTopOf="@+id/current_loadout_label"
                app:uncheckedSrc="@drawable/ic_loadout_combat_inactive"
                tools:text="combat" />

            <com.pecawolf.charactersheet.ui.view.TwoStateImageView
                android:id="@+id/loadout_social"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:src="@drawable/ic_loadout_social_inactive"
                app:checkedSrc="@drawable/ic_loadout_social_active"
                app:isActive="false"
                app:layout_constraintBottom_toBottomOf="@+id/current_loadout_label"
                app:layout_constraintEnd_toStartOf="@id/loadout_travel"
                app:layout_constraintStart_toEndOf="@id/loadout_combat"
                app:layout_constraintTop_toTopOf="@+id/current_loadout_label"
                app:uncheckedSrc="@drawable/ic_loadout_social_inactive"
                tools:text="social" />

            <com.pecawolf.charactersheet.ui.view.TwoStateImageView
                android:id="@+id/loadout_travel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:src="@drawable/ic_loadout_travel_inactive"
                app:checkedSrc="@drawable/ic_loadout_travel_active"
                app:isActive="false"
                app:layout_constraintBottom_toBottomOf="@+id/current_loadout_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/loadout_social"
                app:layout_constraintTop_toTopOf="@+id/current_loadout_label"
                app:uncheckedSrc="@drawable/ic_loadout_travel_inactive"
                tools:text="travel" />

            <TextView
                android:id="@+id/primary_weapon_label"
                style="@style/Text.Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginTop="@dimen/spacing_2"
                android:text="@string/primary_weapon"
                app:layout_constraintEnd_toEndOf="@id/guide_50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/current_loadout_label" />

            <TextView
                android:id="@+id/primary_weapon_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                app:layout_constraintBaseline_toBaselineOf="@+id/primary_weapon_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guide_50"
                tools:text="AR-15" />

            <TextView
                android:id="@+id/secondary_weapon_label"
                style="@style/Text.Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginTop="@dimen/spacing_2"
                android:text="@string/secondary_weapon"
                app:layout_constraintEnd_toEndOf="@id/guide_50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/primary_weapon_label" />

            <TextView
                android:id="@+id/secondary_weapon_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                app:layout_constraintBaseline_toBaselineOf="@+id/secondary_weapon_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guide_50"
                tools:text="Glock" />

            <TextView
                android:id="@+id/tertiary_weapon_label"
                style="@style/Text.Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginTop="@dimen/spacing_2"
                android:text="@string/tertiary_weapon"
                app:layout_constraintEnd_toEndOf="@id/guide_50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/secondary_weapon_label" />

            <TextView
                android:id="@+id/tertiary_weapon_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                app:layout_constraintBaseline_toBaselineOf="@+id/tertiary_weapon_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guide_50"
                tools:text="Falcata" />

            <TextView
                android:id="@+id/civilian_clothes_label"
                style="@style/Text.Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginTop="@dimen/spacing_4"
                android:text="@string/civilian_clothes"
                app:layout_constraintEnd_toEndOf="@id/guide_50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tertiary_weapon_label" />

            <TextView
                android:id="@+id/civilian_clothes_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                app:layout_constraintBaseline_toBaselineOf="@+id/civilian_clothes_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guide_50"
                tools:text="Kevlar-reinforced suit" />

            <TextView
                android:id="@+id/combat_gear_label"
                style="@style/Text.Label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginTop="@dimen/spacing_4"
                android:text="@string/combat_gear"
                app:layout_constraintEnd_toEndOf="@id/guide_50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/civilian_clothes_label" />

            <TextView
                android:id="@+id/combat_gear_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                app:layout_constraintBaseline_toBaselineOf="@+id/combat_gear_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guide_50"
                tools:text="Goliath exo-skeleton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/money_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loadout_card">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/money_label"
                style="@style/Text.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginTop="@dimen/spacing_2"
                android:text="@string/money" />

            <TextView
                android:id="@+id/money_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_weight="1"
                android:gravity="end"
                tools:text="50 000" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/backpack_header"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_1"
        android:layout_marginTop="@dimen/spacing_4"
        app:layout_constraintEnd_toStartOf="@id/storage_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/money_card">

        <TextView
            style="@style/Text.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_backpack"
            android:gravity="center"
            android:text="@string/backpack" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/storage_header"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_1"
        android:layout_marginTop="@dimen/spacing_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/backpack_header"
        app:layout_constraintTop_toBottomOf="@id/money_card">

        <TextView
            style="@style/Text.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_treasure"
            android:gravity="center"
            android:text="@string/storage" />

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/backpack_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/storage_recycler"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backpack_header"
        tools:listitem="@layout/item_inventory" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/storage_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/spacing_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/backpack_recycler"
        app:layout_constraintTop_toBottomOf="@id/backpack_header"
        tools:listitem="@layout/item_inventory" />

</androidx.constraintlayout.widget.ConstraintLayout>