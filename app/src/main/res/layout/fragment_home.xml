<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Box"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guide_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guide_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.cardview.widget.CardView
        android:id="@+id/home_item_detail_base_data_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_guide_header_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <TextView
                android:id="@+id/home_name_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_name"
                app:layout_constraintEnd_toEndOf="@id/home_guide_header_25"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_name_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:layout_constraintBaseline_toBaselineOf="@id/home_name_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="3"
                app:layout_constraintStart_toStartOf="@id/home_guide_header_25"
                tools:text="Ahsoka Tano" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_name_edit_icon"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:background="@drawable/bg_circle_card"
                android:padding="@dimen/spacing_1"
                android:src="@drawable/ic_wrench_inactive"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/home_name_value"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/home_name_value"
                app:layout_constraintTop_toTopOf="@id/home_name_value"
                tools:visibility="visible" />


            <TextView
                android:id="@+id/home_species_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_species"
                app:layout_constraintEnd_toEndOf="@id/home_guide_header_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_name_label" />

            <TextView
                android:id="@+id/home_species_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:layout_constraintBaseline_toBaselineOf="@id/home_species_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/home_guide_header_25"
                tools:text="Togruta" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_1"
        android:orientation="vertical"
        app:constraint_referenced_ids="home_str_stat, home_dex_stat, home_vit_stat,home_inl_stat, home_wis_stat, home_cha_stat,"
        app:flow_firstVerticalStyle="spread_inside"
        app:flow_verticalBias="0"
        app:flow_verticalGap="@dimen/spacing_1"
        app:flow_verticalStyle="packed"
        app:flow_wrapMode="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/home_guide_75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_item_detail_base_data_card" />

    <com.pecawolf.charactersheet.ui.view.RollView
        android:id="@+id/home_str_stat"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <com.pecawolf.charactersheet.ui.view.RollView
        android:id="@+id/home_dex_stat"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <com.pecawolf.charactersheet.ui.view.RollView
        android:id="@+id/home_vit_stat"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <com.pecawolf.charactersheet.ui.view.RollView
        android:id="@+id/home_inl_stat"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <com.pecawolf.charactersheet.ui.view.RollView
        android:id="@+id/home_wis_stat"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <com.pecawolf.charactersheet.ui.view.RollView
        android:id="@+id/home_cha_stat"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/home_hit_point_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_1"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/home_heal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_guide_75"
        app:layout_constraintTop_toBottomOf="@id/home_item_detail_base_data_card">

        <TextView
            android:id="@+id/home_luck_and_hp_value"
            style="@style/Text.Value.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/home_heal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10+4" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/home_heal"
        style="@style/Button.Positive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="@string/heal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_guide_75"
        app:layout_constraintTop_toBottomOf="@id/home_hit_point_card" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/home_luck_and_hp_recycler"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:padding="@dimen/spacing_1"
        app:layout_constraintBottom_toTopOf="@id/home_damage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_guide_75"
        app:layout_constraintTop_toBottomOf="@id/home_heal"
        tools:itemCount="14"
        tools:listitem="@layout/item_hit_point" />

    <TextView
        android:id="@+id/home_damage"
        style="@style/Button.Negative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/damage"
        app:layout_constraintBottom_toTopOf="@id/home_character_edit_fab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_guide_75" />

    <View
        android:id="@+id/home_clicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/home_progress"
        style="@style/Progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/home_character_edit_fab"
        style="@style/Button.Fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wrench_24"
        app:fab_label="@string/item_detail_fab_label_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>