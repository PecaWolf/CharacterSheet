<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_1"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guide_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guide_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guide_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.cardview.widget.CardView
        android:id="@+id/home_item_detail_base_data_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_guide_header_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <TextView
                android:id="@+id/home_name_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_name"
                app:layout_constraintEnd_toEndOf="@id/home_guide_header_25"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_name_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:layout_constraintBaseline_toBaselineOf="@id/home_name_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="3"
                app:layout_constraintStart_toStartOf="@id/home_guide_header_25"
                tools:text="Ahsoka Tano" />

            <TextView
                android:id="@+id/home_species_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_species"
                app:layout_constraintEnd_toEndOf="@id/home_guide_header_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_name_label" />

            <TextView
                android:id="@+id/home_species_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:layout_constraintBaseline_toBaselineOf="@id/home_species_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/home_guide_header_25"
                tools:text="Togruta" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/home_stats_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/home_guide_75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_item_detail_base_data_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_1">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_guide_stats_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.333" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_guide_stats_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.666" />

            <TextView
                android:id="@+id/home_str_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_str"
                app:layout_constraintBaseline_toBaselineOf="@id/home_str_roll"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/home_str_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_str_label"
                app:layout_constraintEnd_toStartOf="@id/home_str_trap"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_1"
                tools:text="10" />

            <TextView
                android:id="@+id/home_str_trap"
                style="@style/Text.Value.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_str_label"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_2"
                app:layout_constraintStart_toEndOf="@id/home_str_value"
                tools:text="20" />

            <TextView
                android:id="@+id/home_str_roll"
                style="@style/Button.Roll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/roll"
                app:layout_constraintBottom_toTopOf="@id/home_dex_roll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_2"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- /////////////////////////////////////////////////////////////////////////////////////////// -->

            <TextView
                android:id="@+id/home_dex_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_dex"
                app:layout_constraintBaseline_toBaselineOf="@id/home_dex_roll"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/home_dex_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_dex_label"
                app:layout_constraintEnd_toStartOf="@id/home_dex_trap"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_1"
                tools:text="10" />

            <TextView
                android:id="@+id/home_dex_trap"
                style="@style/Text.Value.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_dex_label"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_2"
                app:layout_constraintStart_toEndOf="@id/home_dex_value"
                tools:text="20" />

            <TextView
                android:id="@+id/home_dex_roll"
                style="@style/Button.Roll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/roll"
                app:layout_constraintBottom_toTopOf="@id/home_vit_roll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_2"
                app:layout_constraintTop_toBottomOf="@id/home_str_roll" />

            <!-- /////////////////////////////////////////////////////////////////////////////////////////// -->

            <TextView
                android:id="@+id/home_vit_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_vit"
                app:layout_constraintBaseline_toBaselineOf="@id/home_vit_roll"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/home_vit_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_vit_label"
                app:layout_constraintEnd_toStartOf="@id/home_vit_trap"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_1"
                tools:text="10" />

            <TextView
                android:id="@+id/home_vit_trap"
                style="@style/Text.Value.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_vit_label"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_2"
                app:layout_constraintStart_toEndOf="@id/home_vit_value"
                tools:text="20" />

            <TextView
                android:id="@+id/home_vit_roll"
                style="@style/Button.Roll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/roll"
                app:layout_constraintBottom_toTopOf="@id/home_int_roll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_2"
                app:layout_constraintTop_toBottomOf="@id/home_dex_roll" />

            <!-- /////////////////////////////////////////////////////////////////////////////////////////// -->

            <TextView
                android:id="@+id/home_int_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_int"
                app:layout_constraintBaseline_toBaselineOf="@id/home_int_roll"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/home_int_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_int_label"
                app:layout_constraintEnd_toStartOf="@id/home_int_trap"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_1"
                tools:text="10" />

            <TextView
                android:id="@+id/home_int_trap"
                style="@style/Text.Value.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_int_label"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_2"
                app:layout_constraintStart_toEndOf="@id/home_int_value"
                tools:text="20" />

            <TextView
                android:id="@+id/home_int_roll"
                style="@style/Button.Roll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/roll"
                app:layout_constraintBottom_toTopOf="@id/home_wis_roll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_2"
                app:layout_constraintTop_toBottomOf="@id/home_vit_roll" />

            <!-- /////////////////////////////////////////////////////////////////////////////////////////// -->

            <TextView
                android:id="@+id/home_wis_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_wis"
                app:layout_constraintBaseline_toBaselineOf="@id/home_wis_roll"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/home_wis_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_wis_label"
                app:layout_constraintEnd_toStartOf="@id/home_wis_trap"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_1"
                tools:text="10" />

            <TextView
                android:id="@+id/home_wis_trap"
                style="@style/Text.Value.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_wis_label"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_2"
                app:layout_constraintStart_toEndOf="@id/home_wis_value"
                tools:text="20" />

            <TextView
                android:id="@+id/home_wis_roll"
                style="@style/Button.Roll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/roll"
                app:layout_constraintBottom_toTopOf="@id/home_cha_roll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_2"
                app:layout_constraintTop_toBottomOf="@id/home_int_roll" />

            <!-- /////////////////////////////////////////////////////////////////////////////////////////// -->

            <TextView
                android:id="@+id/home_cha_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_cha"
                app:layout_constraintBaseline_toBaselineOf="@id/home_cha_roll"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/home_cha_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_cha_label"
                app:layout_constraintEnd_toStartOf="@id/home_cha_trap"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_1"
                tools:text="10" />

            <TextView
                android:id="@+id/home_cha_trap"
                style="@style/Text.Value.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/home_cha_label"
                app:layout_constraintEnd_toEndOf="@id/home_guide_stats_2"
                app:layout_constraintStart_toEndOf="@id/home_cha_value"
                tools:text="20" />

            <TextView
                android:id="@+id/home_cha_roll"
                style="@style/Button.Roll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/roll"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/home_guide_stats_2"
                app:layout_constraintTop_toBottomOf="@id/home_wis_roll" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/home_hit_point_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/home_heal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_guide_75"
        app:layout_constraintTop_toBottomOf="@id/home_item_detail_base_data_card">

        <TextView
            android:id="@+id/home_luck_and_hp_value"
            style="@style/Text.Value.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/home_heal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10+4" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/home_heal"
        style="@style/Button.Positive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="@string/damage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_guide_75"
        app:layout_constraintTop_toBottomOf="@id/home_hit_point_card" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_luck_and_hp_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/spacing_1"
        android:layout_marginBottom="@dimen/spacing_1"
        app:layout_constraintBottom_toTopOf="@id/home_damage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_guide_75"
        app:layout_constraintTop_toBottomOf="@id/home_heal"
        tools:itemCount="14"
        tools:listitem="@layout/item_hit_point" />

    <TextView
        android:id="@+id/home_damage"
        style="@style/Button.Negative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/damage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_guide_75" />

</androidx.constraintlayout.widget.ConstraintLayout>