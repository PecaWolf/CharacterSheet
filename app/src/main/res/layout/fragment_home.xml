<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guide_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_guide_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.cardview.widget.CardView
        android:id="@+id/home_item_detail_base_data_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/spacing_1"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="@dimen/spacing_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/home_guide_header_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <TextView
                android:id="@+id/home_name_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_name"
                app:layout_constraintEnd_toEndOf="@id/home_guide_header_25"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_name_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:layout_constraintBaseline_toBaselineOf="@id/home_name_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="3"
                app:layout_constraintStart_toStartOf="@id/home_guide_header_25"
                tools:text="Ahsoka Tano" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/home_name_edit_icon"
                style="@style/Button.Icon"
                android:src="@drawable/ic_wrench"
                app:layout_constraintBottom_toBottomOf="@id/home_name_value"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/home_name_value"
                app:layout_constraintTop_toTopOf="@id/home_name_value"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/home_species_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/character_species"
                app:layout_constraintEnd_toEndOf="@id/home_guide_header_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home_name_label" />

            <TextView
                android:id="@+id/home_species_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:layout_constraintBaseline_toBaselineOf="@id/home_species_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/home_guide_header_25"
                tools:text="Togruta" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_2"
        android:layout_marginEnd="@dimen/spacing_2"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/home_guide_75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_item_detail_base_data_card">

        <com.pecawolf.charactersheet.ui.view.RollView
            android:id="@+id/home_str_stat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/spacing_1"
            android:layout_weight="1"
            android:background="@drawable/bg_card"
            android:padding="@dimen/spacing_1" />

        <com.pecawolf.charactersheet.ui.view.RollView
            android:id="@+id/home_dex_stat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/spacing_1"
            android:layout_weight="1"
            android:background="@drawable/bg_card"
            android:padding="@dimen/spacing_1" />

        <com.pecawolf.charactersheet.ui.view.RollView
            android:id="@+id/home_vit_stat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/spacing_1"
            android:layout_weight="1"
            android:background="@drawable/bg_card"
            android:padding="@dimen/spacing_1" />

        <com.pecawolf.charactersheet.ui.view.RollView
            android:id="@+id/home_inl_stat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/spacing_1"
            android:layout_weight="1"
            android:background="@drawable/bg_card"
            android:padding="@dimen/spacing_1" />

        <com.pecawolf.charactersheet.ui.view.RollView
            android:id="@+id/home_wis_stat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/spacing_1"
            android:layout_weight="1"
            android:background="@drawable/bg_card"
            android:padding="@dimen/spacing_1" />

        <com.pecawolf.charactersheet.ui.view.RollView
            android:id="@+id/home_cha_stat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/spacing_1"
            android:layout_weight="1"
            android:background="@drawable/bg_card"
            android:padding="@dimen/spacing_1" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.cardview.widget.CardView
        android:id="@+id/home_hit_point_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_2"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toTopOf="@id/home_hit_point_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_guide_75"
        app:layout_constraintTop_toBottomOf="@id/home_item_detail_base_data_card">

        <TextView
            android:id="@+id/home_luck_and_hp_value"
            style="@style/Text.Value.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/home_heal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10+4" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/home_hit_point_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/spacing_2"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/home_character_edit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_guide_75"
        app:layout_constraintTop_toBottomOf="@id/home_hit_point_card">

        <ImageView
            android:id="@+id/home_heal"
            style="@style/Button.Positive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_margin="0dp"
            android:padding="@dimen/spacing_3"
            android:src="@drawable/ic_add_circled"
            android:text="@string/heal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/home_guide_75"
            app:layout_constraintTop_toBottomOf="@id/home_hit_point_card" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/home_luck_and_hp_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/spacing_1"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/spacing_1"
            tools:itemCount="14"
            tools:listitem="@layout/item_hit_point" />

        <ImageView
            android:id="@+id/home_damage"
            style="@style/Button.Negative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_margin="0dp"
            android:padding="@dimen/spacing_3"
            android:src="@drawable/ic_minus_circled"
            android:text="@string/damage"
            app:layout_constraintBottom_toTopOf="@id/home_character_edit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/home_guide_75" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
        android:id="@+id/home_character_edit_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/bar_height"
        android:background="@drawable/bg_card"
        app:iconSrc="@drawable/ic_wrench"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_guide_75" />

    <FrameLayout
        android:id="@+id/home_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            style="@style/Progress"
            android:layout_gravity="center" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>