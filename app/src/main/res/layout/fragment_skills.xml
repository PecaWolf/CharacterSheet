<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/Box"
    android:layout_height="match_parent"
    tools:context=".ui.skills.SkillsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/skills_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/spacing_2"
        app:layout_constraintBottom_toTopOf="@id/skills_filter_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/skills_progress"
        style="@style/Progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/skills_filter_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="@dimen/bar_height"
        app:layout_constraintBottom_toBottomOf="@id/skills_fab"
        app:layout_constraintEnd_toStartOf="@id/skills_fab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/skills_fab">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/spacing_2">

            <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                android:id="@+id/skills_filter_show_all_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:checkedSrc="@drawable/ic_checkmark_active"
                app:isChecked="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:text="@string/skills_show_all"
                app:uncheckedSrc="@drawable/ic_checkmark_inactive" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/skills_fab"
        style="@style/Button.Fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wrench_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>