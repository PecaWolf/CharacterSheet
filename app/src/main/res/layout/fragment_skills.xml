<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/Box"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:background="@color/background"
    android:padding="0dp"
    tools:context=".ui.skills.SkillsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/skills_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/spacing_2"
        android:layout_marginBottom="@dimen/spacing_2"
        app:layout_constraintBottom_toTopOf="@id/skills_filter_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/skills_progress"
        style="@style/Progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <View
        android:id="@+id/skills_fab_dummy"
        android:layout_width="@dimen/fab_size_normal"
        android:layout_height="@dimen/fab_size_normal"
        android:layout_marginEnd="@dimen/spacing_4"
        android:layout_marginBottom="@dimen/spacing_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/skills_filter_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_margin="@dimen/spacing_2"
        android:layout_height="@dimen/bar_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/skills_fab_dummy"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/spacing_2">

            <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                android:id="@+id/skill_search_icon"
                android:layout_width="@dimen/icon_medium"
                android:layout_height="wrap_content"
                app:checkedSrc="@drawable/ic_search_24_active"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/skill_search_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:uncheckedSrc="@drawable/ic_search_24_inactive" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@id/skill_search_icon"
                app:layout_constraintEnd_toEndOf="@id/skill_search_icon"
                app:layout_constraintStart_toStartOf="@id/skill_search_icon"
                app:layout_constraintTop_toTopOf="@id/skill_search_icon" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/skill_search_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/spacing_2"
                android:hint="@string/skills_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/skill_search_icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/skill_search_input"
                    style="@style/Input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundCard"
                    android:imeOptions="actionSearch"
                    android:lines="1"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/skill_search_cancel"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:layout_marginEnd="@dimen/spacing_2"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_cancel"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/skills_fab"
        style="@style/Button.Fab.Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wrench_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/skills_edit_fab"
            style="@style/Button.Fab.Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wrench_24"
            app:fab_label="@string/skills_edit" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/skills_show_unknown_fab"
            style="@style/Button.Fab.Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_24_inactive"
            app:fab_label="@string/skills_unknown_show" />

    </com.github.clans.fab.FloatingActionMenu>

</androidx.constraintlayout.widget.ConstraintLayout>