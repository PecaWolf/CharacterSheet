<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_detail_base_data_card"
                style="@style/Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/header_guide_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:showIn="@layout/fragment_inventory">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/Box"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_detail_icon"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:layout_marginStart="@dimen/spacing_3"
                        app:layout_constraintEnd_toStartOf="@id/item_detail_name"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/item_detail_id"
                        app:srcCompat="@drawable/ic_backpack" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_name"
                        style="@style/Text.Label.Primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        app:layout_constraintBottom_toTopOf="@id/item_detail_description"
                        app:layout_constraintEnd_toStartOf="@id/item_detail_id"
                        app:layout_constraintStart_toEndOf="@id/item_detail_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Can of beer" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_slot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_2"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/activePrimary"
                        android:textSize="@dimen/text_tiny"
                        app:layout_constraintBottom_toBottomOf="@id/item_detail_name"
                        app:layout_constraintStart_toStartOf="@id/item_detail_name"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_name"
                        tools:text="Primary" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_id"
                        style="@style/Text.Label.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        app:layout_constraintBaseline_toBaselineOf="@id/item_detail_name"
                        app:layout_constraintEnd_toStartOf="@id/item_detail_count"
                        app:layout_constraintStart_toEndOf="@id/item_detail_name"
                        tools:text="#123456" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_count"
                        style="@style/Text.Label.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBaseline_toBaselineOf="@id/item_detail_name"
                        app:layout_constraintEnd_toStartOf="@id/item_detail_count_edit_icon"
                        app:layout_constraintStart_toEndOf="@id/item_detail_id"
                        tools:text="3x" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_description"
                        style="@style/Text.Description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start|top"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_name"
                        tools:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Pellentesque arcu. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos hymenaeos." />

                    <androidx.constraintlayout.widget.Group
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_detail_name_edit_icon"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:background="@drawable/bg_circle_card"
                        android:padding="@dimen/spacing_1"
                        android:src="@drawable/ic_wrench_inactive"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/item_detail_name"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="@id/item_detail_name"
                        app:layout_constraintTop_toTopOf="@id/item_detail_name"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_detail_count_edit_icon"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:layout_marginEnd="@dimen/spacing_1"
                        android:background="@drawable/bg_circle_card"
                        android:padding="@dimen/spacing_1"
                        android:src="@drawable/ic_wrench_inactive"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/item_detail_count"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/item_detail_count"
                        app:layout_constraintTop_toTopOf="@id/item_detail_count"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_detail_description_edit_icon"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:background="@drawable/bg_circle_card"
                        android:padding="@dimen/spacing_1"
                        android:src="@drawable/ic_wrench_inactive"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/item_detail_description"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="@id/item_detail_description"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/header_guide_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/spacing_1"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_detail_base_data_card" />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_detail_loadouts_card"
                style="@style/Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/header_guide_2"
                app:layout_constraintEnd_toStartOf="@id/item_detail_damage_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header_guide_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/Box"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_loadout_header"
                        style="@style/Text.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/new_item_header_loadout"
                        app:layout_constraintBottom_toTopOf="@id/item_detail_loadout_combat"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                        android:id="@+id/item_detail_loadout_combat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:checkedSrc="@drawable/ic_loadout_combat_active"
                        app:layout_constraintBottom_toTopOf="@id/item_detail_loadout_social"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_loadout_header"
                        app:text="@string/new_item_loadout_combat"
                        app:uncheckedSrc="@drawable/ic_loadout_combat_inactive" />

                    <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                        android:id="@+id/item_detail_loadout_social"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:checkedSrc="@drawable/ic_loadout_social_active"
                        app:layout_constraintBottom_toTopOf="@id/item_detail_loadout_travel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_loadout_combat"
                        app:text="@string/new_item_loadout_social"
                        app:uncheckedSrc="@drawable/ic_loadout_social_inactive" />

                    <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                        android:id="@+id/item_detail_loadout_travel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:checkedSrc="@drawable/ic_loadout_travel_active"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_loadout_social"
                        app:text="@string/new_item_loadout_travel"
                        app:uncheckedSrc="@drawable/ic_loadout_travel_inactive" />

                    <View
                        android:id="@+id/item_detail_loadouts_clicker"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clickable="true"
                        android:enabled="true"
                        android:focusable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_detail_loadout_edit_icon"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:background="@drawable/bg_circle_card"
                        android:padding="@dimen/spacing_1"
                        android:src="@drawable/ic_wrench_inactive"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/item_detail_loadout_header"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="@id/item_detail_loadout_header"
                        app:layout_constraintTop_toTopOf="@id/item_detail_loadout_header"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_detail_damage_card"
                style="@style/Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/header_guide_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_detail_loadouts_card"
                app:layout_constraintTop_toBottomOf="@id/header_guide_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/Box"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_damage_header"
                        style="@style/Text.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/new_item_header_damage"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                        android:id="@+id/item_detail_damage_light"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:checkedSrc="@drawable/ic_checkmark_active"
                        app:isChecked="false"
                        app:layout_constraintBottom_toTopOf="@id/item_detail_damage_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_damage_header"
                        app:text="@string/new_item_damage_light"
                        app:uncheckedSrc="@drawable/ic_checkmark_inactive" />

                    <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                        android:id="@+id/item_detail_damage_medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:checkedSrc="@drawable/ic_checkmark_active"
                        app:isChecked="false"
                        app:layout_constraintBottom_toTopOf="@id/item_detail_damage_heavy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_damage_light"
                        app:text="@string/new_item_damage_medium"
                        app:uncheckedSrc="@drawable/ic_checkmark_inactive" />

                    <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                        android:id="@+id/item_detail_damage_heavy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:checkedSrc="@drawable/ic_checkmark_active"
                        app:isChecked="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_damage_medium"
                        app:text="@string/new_item_damage_heavy"
                        app:uncheckedSrc="@drawable/ic_checkmark_inactive" />

                    <View
                        android:id="@+id/item_detail_damage_clicker"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clickable="true"
                        android:enabled="true"
                        android:focusable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_detail_damage_edit_icon"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:background="@drawable/bg_circle_card"
                        android:padding="@dimen/spacing_1"
                        android:src="@drawable/ic_wrench_inactive"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/item_detail_damage_header"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="@id/item_detail_damage_header"
                        app:layout_constraintTop_toTopOf="@id/item_detail_damage_header"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/header_guide_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:constraint_referenced_ids="item_detail_loadouts_card,item_detail_damage_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_detail_ammo_card"
                style="@style/Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/item_detail_wield_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header_guide_2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/Box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_ammunition_header"
                        style="@style/Text.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/new_item_ammunition_header"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_magazine_size_label"
                        style="@style/Text.Label.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/spacing_2"
                        android:paddingBottom="@dimen/spacing_2"
                        android:text="@string/new_item_magazine_size_hint"
                        app:layout_constraintEnd_toStartOf="@id/item_detail_magazine_size_value"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_ammunition_header" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_magazine_size_value"
                        style="@style/Text.Value.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:layout_constraintBaseline_toBaselineOf="@id/item_detail_magazine_size_label"
                        app:layout_constraintEnd_toStartOf="@id/item_detail_magazine_size_edit_icon"
                        app:layout_constraintStart_toEndOf="@id/item_detail_magazine_size_label"
                        tools:text="10" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_detail_magazine_size_edit_icon"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:background="@drawable/bg_circle_card"
                        android:padding="@dimen/spacing_1"
                        android:src="@drawable/ic_wrench_inactive"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/item_detail_magazine_size_value"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/item_detail_magazine_size_value"
                        app:layout_constraintTop_toTopOf="@id/item_detail_magazine_size_value"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_rate_of_fire_label"
                        style="@style/Text.Label.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/spacing_2"
                        android:paddingBottom="@dimen/spacing_2"
                        android:text="@string/new_item_rate_of_fire_hint"
                        app:layout_constraintEnd_toStartOf="@id/item_detail_rate_of_fire_value"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_magazine_size_label" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_rate_of_fire_value"
                        style="@style/Text.Value.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:layout_constraintBaseline_toBaselineOf="@id/item_detail_rate_of_fire_label"
                        app:layout_constraintEnd_toStartOf="@id/item_detail_rate_of_fire_edit_icon"
                        app:layout_constraintStart_toEndOf="@id/item_detail_rate_of_fire_label"
                        tools:text="10" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_detail_rate_of_fire_edit_icon"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:background="@drawable/bg_circle_card"
                        android:padding="@dimen/spacing_1"
                        android:src="@drawable/ic_wrench_inactive"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/item_detail_rate_of_fire_value"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/item_detail_rate_of_fire_value"
                        app:layout_constraintTop_toTopOf="@id/item_detail_rate_of_fire_value"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_detail_wield_card"
                style="@style/Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/item_detail_damage_types_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_detail_ammo_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/Box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_wield_header"
                        style="@style/Text.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/new_item_wield_header"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                        android:id="@+id/item_detail_wield_one_handed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:checkedSrc="@drawable/ic_checkmark_active"
                        app:isChecked="false"
                        app:layout_constraintEnd_toStartOf="@id/item_detail_wield_two_handed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_wield_header"
                        app:text="@string/wield_one_handed"
                        app:uncheckedSrc="@drawable/ic_checkmark_inactive" />

                    <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                        android:id="@+id/item_detail_wield_two_handed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:checkedSrc="@drawable/ic_checkmark_active"
                        app:isChecked="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/item_detail_wield_one_handed"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_wield_header"
                        app:text="@string/wield_two_handed"
                        app:uncheckedSrc="@drawable/ic_checkmark_inactive" />

                    <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                        android:id="@+id/item_detail_wield_mounted"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        app:checkedSrc="@drawable/ic_checkmark_active"
                        app:isChecked="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/item_detail_wield_drone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_wield_one_handed"
                        app:text="@string/wield_mounted"
                        app:uncheckedSrc="@drawable/ic_checkmark_inactive" />

                    <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                        android:id="@+id/item_detail_wield_drone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:visibility="invisible"
                        app:checkedSrc="@drawable/ic_checkmark_active"
                        app:isChecked="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/item_detail_wield_mounted"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_wield_two_handed"
                        app:text="@string/wield_drone"
                        app:uncheckedSrc="@drawable/ic_checkmark_inactive" />

                    <View
                        android:id="@+id/item_detail_wield_clicker"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clickable="true"
                        android:enabled="true"
                        android:focusable="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_detail_wield_edit_icon"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:background="@drawable/bg_circle_card"
                        android:padding="@dimen/spacing_1"
                        android:src="@drawable/ic_wrench_inactive"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/item_detail_wield_header"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="@id/item_detail_wield_header"
                        app:layout_constraintTop_toTopOf="@id/item_detail_wield_header"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_detail_damage_types_card"
                style="@style/Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_detail_wield_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/item_detail_damage_types_header"
                        style="@style/Text.Header"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/new_item_protection_types_header"
                        app:layout_constraintBottom_toTopOf="@id/item_detail_damage_types_recycler"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_detail_damage_types_edit_icon"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        app:layout_constraintBottom_toBottomOf="@id/item_detail_damage_types_header"
                        app:layout_constraintEnd_toEndOf="@id/item_detail_damage_types_header"
                        app:layout_constraintTop_toTopOf="@id/item_detail_damage_types_header"
                        app:srcCompat="@drawable/ic_wrench_inactive" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/item_detail_damage_types_recycler"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_1"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        android:padding="@dimen/spacing_1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/item_detail_damage_types_header"
                        tools:itemCount="10"
                        tools:listitem="@layout/item_simple_selection" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/item_detail_content_clicker"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="1dp"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/item_detail_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle_card"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/item_detail_fab_menu"
        style="@style/Button.Fab.Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu_colorNormal="@color/buttonBackgroundPositiveEnabled"
        app:menu_icon="@drawable/ic_add"
        app:menu_openDirection="up">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item_detail_item_edit_fab"
            style="@style/Button.Fab.Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wrench_24"
            app:fab_label="@string/item_detail_fab_label_edit" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item_detail_item_equip_fab"
            style="@style/Button.Fab.Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_equip_24"
            app:fab_label="@string/item_detail_fab_label_equip" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item_detail_item_delete_fab"
            style="@style/Button.Fab.Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_minus"
            app:fab_label="@string/item_detail_fab_label_delete" />

    </com.github.clans.fab.FloatingActionMenu>

</androidx.constraintlayout.widget.ConstraintLayout>