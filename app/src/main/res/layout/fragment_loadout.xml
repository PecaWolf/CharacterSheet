<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/spacing_1"
    tools:context=".ui.loadout.LoadoutFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/loadout_overview_card"
        style="@style/Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_1"
        android:padding="@dimen/spacing_1"
        app:layout_constraintBottom_toTopOf="@id/loadout_scroll_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/spacing_2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/loadout_current_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:text="@string/current_loadout"
                app:layout_constraintEnd_toStartOf="@id/loadout_current_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/loadout_current_value"
                style="@style/Text.Value.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginTop="@dimen/spacing_2"
                app:layout_constraintBaseline_toBaselineOf="@id/loadout_current_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/loadout_current_label"
                tools:text="Combat" />

            <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                android:id="@+id/loadout_combat_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginVertical="@dimen/spacing_2"
                app:iconSrc="@drawable/ic_loadout_combat"
                app:isChecked="false"
                app:layout_constraintBottom_toTopOf="@id/loadout_overview_primary"
                app:layout_constraintEnd_toStartOf="@id/loadout_social_checkbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loadout_current_value" />

            <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                android:id="@+id/loadout_social_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginVertical="@dimen/spacing_2"
                app:iconSrc="@drawable/ic_loadout_social"
                app:isChecked="false"
                app:layout_constraintBottom_toBottomOf="@id/loadout_combat_checkbox"
                app:layout_constraintEnd_toStartOf="@id/loadout_travel_checkbox"
                app:layout_constraintStart_toEndOf="@id/loadout_combat_checkbox"
                app:layout_constraintTop_toTopOf="@id/loadout_combat_checkbox" />

            <com.pecawolf.charactersheet.ui.view.TwoStateImageCheckView
                android:id="@+id/loadout_travel_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginVertical="@dimen/spacing_2"
                app:iconSrc="@drawable/ic_loadout_travel"
                app:isChecked="false"
                app:layout_constraintBottom_toBottomOf="@id/loadout_combat_checkbox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/loadout_social_checkbox"
                app:layout_constraintTop_toTopOf="@id/loadout_combat_checkbox" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/loadout_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loadout_overview_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.pecawolf.charactersheet.ui.view.LoadoutItem
                android:id="@+id/loadout_overview_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/bar_height"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginVertical="@dimen/spacing_1"
                android:background="@drawable/bg_card"
                app:label="@string/primary_weapon"
                app:layout_constraintBottom_toTopOf="@id/loadout_overview_secondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemIcon="@drawable/ic_rifle" />

            <com.pecawolf.charactersheet.ui.view.LoadoutItem
                android:id="@+id/loadout_overview_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/bar_height"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginVertical="@dimen/spacing_1"
                android:background="@drawable/bg_card"
                app:label="@string/secondary_weapon"
                app:layout_constraintBottom_toTopOf="@id/loadout_overview_tertiary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loadout_overview_primary"
                tools:itemIcon="@drawable/ic_pistol" />

            <com.pecawolf.charactersheet.ui.view.LoadoutItem
                android:id="@+id/loadout_overview_tertiary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/bar_height"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginVertical="@dimen/spacing_1"
                android:background="@drawable/bg_card"
                app:label="@string/tertiary_weapon"
                app:layout_constraintBottom_toTopOf="@id/loadout_overview_clothes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loadout_overview_secondary"
                tools:itemIcon="@drawable/ic_knife" />

            <com.pecawolf.charactersheet.ui.view.LoadoutItem
                android:id="@+id/loadout_overview_clothes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/bar_height"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginVertical="@dimen/spacing_1"
                android:background="@drawable/bg_card"
                app:label="@string/civilian_clothes"
                app:layout_constraintBottom_toTopOf="@id/loadout_overview_armor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loadout_overview_tertiary"
                tools:itemIcon="@drawable/ic_clothes" />

            <com.pecawolf.charactersheet.ui.view.LoadoutItem
                android:id="@+id/loadout_overview_armor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/bar_height"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:layout_marginVertical="@dimen/spacing_1"
                android:background="@drawable/bg_card"
                app:label="@string/combat_gear"
                app:layout_constraintBottom_toTopOf="@id/loadout_skills_recycler"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loadout_overview_clothes"
                tools:itemIcon="@drawable/ic_no_armor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/loadout_skills_recycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_1"
                android:nestedScrollingEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loadout_overview_armor"
                tools:itemCount="5"
                tools:listitem="@layout/item_skill_skill" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>