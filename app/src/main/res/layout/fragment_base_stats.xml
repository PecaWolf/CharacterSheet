<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_detail_base_data_card"
        style="@style/Card"
        android:layout_margin="@dimen/spacing_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/basic_info_name_header" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_2"
                android:hint="@string/create_character_name_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_input"
                    style="@style/Input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/stats_card"
        style="@style/Card"
        android:layout_margin="@dimen/spacing_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_1"
            android:paddingEnd="@dimen/spacing_3">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/stats_header"
                style="@style/Text.Header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/basic_info_stats_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_str_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_2"
                android:paddingBottom="@dimen/spacing_2"
                android:text="@string/basic_info_str"
                app:layout_constraintEnd_toStartOf="@id/basic_info_str_minus"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stats_header" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_str_plus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundPositiveEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_str_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/basic_info_str_value"
                app:layout_constraintTop_toTopOf="@id/basic_info_str_label"
                app:srcCompat="@drawable/ic_add_circled_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_str_value"
                style="@style/Text.Value.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBaseline_toBaselineOf="@id/basic_info_str_label"
                app:layout_constraintEnd_toStartOf="@id/basic_info_str_plus"
                app:layout_constraintStart_toEndOf="@id/basic_info_str_minus"
                tools:text="10" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_str_minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundNegativeEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_str_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toStartOf="@id/basic_info_str_value"
                app:layout_constraintStart_toEndOf="@id/basic_info_str_label"
                app:layout_constraintTop_toTopOf="@id/basic_info_str_label"
                app:srcCompat="@drawable/ic_minus_circled" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_dex_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_2"
                android:paddingBottom="@dimen/spacing_2"
                android:text="@string/basic_info_dex"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_label"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/basic_info_str_label" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_dex_plus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundPositiveEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_dex_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_plus"
                app:layout_constraintTop_toTopOf="@id/basic_info_dex_label"
                app:srcCompat="@drawable/ic_add_circled_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_dex_value"
                style="@style/Text.Value.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBaseline_toBaselineOf="@id/basic_info_dex_label"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_value"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_value"
                tools:text="10" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_dex_minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundNegativeEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_dex_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_minus"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_minus"
                app:layout_constraintTop_toTopOf="@id/basic_info_dex_label"
                app:srcCompat="@drawable/ic_minus_circled" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_vit_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_2"
                android:paddingBottom="@dimen/spacing_2"
                android:text="@string/basic_info_vit"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_label"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/basic_info_dex_label" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_vit_plus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundPositiveEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_vit_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_plus"
                app:layout_constraintTop_toTopOf="@id/basic_info_vit_label"
                app:srcCompat="@drawable/ic_add_circled_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_vit_value"
                style="@style/Text.Value.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBaseline_toBaselineOf="@id/basic_info_vit_label"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_value"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_value"
                tools:text="10" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_vit_minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundNegativeEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_vit_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_minus"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_minus"
                app:layout_constraintTop_toTopOf="@id/basic_info_vit_label"
                app:srcCompat="@drawable/ic_minus_circled" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_int_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_2"
                android:paddingBottom="@dimen/spacing_2"
                android:text="@string/basic_info_int"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_label"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/basic_info_vit_label" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_int_plus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundPositiveEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_int_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_plus"
                app:layout_constraintTop_toTopOf="@id/basic_info_int_label"
                app:srcCompat="@drawable/ic_add_circled_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_int_value"
                style="@style/Text.Value.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBaseline_toBaselineOf="@id/basic_info_int_label"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_value"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_value"
                tools:text="10" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_int_minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundNegativeEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_int_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_minus"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_minus"
                app:layout_constraintTop_toTopOf="@id/basic_info_int_label"
                app:srcCompat="@drawable/ic_minus_circled" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_wis_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_2"
                android:paddingBottom="@dimen/spacing_2"
                android:text="@string/basic_info_wis"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_label"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/basic_info_int_label" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_wis_plus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundPositiveEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_wis_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_plus"
                app:layout_constraintTop_toTopOf="@id/basic_info_wis_label"
                app:srcCompat="@drawable/ic_add_circled_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_wis_value"
                style="@style/Text.Value.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBaseline_toBaselineOf="@id/basic_info_wis_label"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_value"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_value"
                tools:text="10" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_wis_minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundNegativeEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_wis_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_minus"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_minus"
                app:layout_constraintTop_toTopOf="@id/basic_info_wis_label"
                app:srcCompat="@drawable/ic_minus_circled" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_cha_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_2"
                android:paddingBottom="@dimen/spacing_2"
                android:text="@string/basic_info_cha"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_label"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/basic_info_wis_label" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_cha_plus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundPositiveEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_cha_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_plus"
                app:layout_constraintTop_toTopOf="@id/basic_info_cha_label"
                app:srcCompat="@drawable/ic_add_circled_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_cha_value"
                style="@style/Text.Value.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBaseline_toBaselineOf="@id/basic_info_cha_label"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_value"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_value"
                tools:text="10" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/basic_info_cha_minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="@dimen/spacing_1"
                android:paddingStart="@dimen/spacing_2"
                android:tint="@color/buttonBackgroundNegativeEnabled"
                app:layout_constraintBottom_toBottomOf="@id/basic_info_cha_label"
                app:layout_constraintDimensionRatio="3:2"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_minus"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_minus"
                app:layout_constraintTop_toTopOf="@id/basic_info_cha_label"
                app:srcCompat="@drawable/ic_minus_circled" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_remaining_label"
                style="@style/Text.Label.Secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_2"
                android:paddingBottom="@dimen/spacing_2"
                android:text="@string/basic_info_remaining"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_label"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/basic_info_cha_label" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/basic_info_remaining_value"
                style="@style/Text.Value.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBaseline_toBaselineOf="@id/basic_info_remaining_label"
                app:layout_constraintEnd_toEndOf="@id/basic_info_str_value"
                app:layout_constraintStart_toStartOf="@id/basic_info_str_value"
                tools:text="10" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continue_button"
        style="@style/Button.Positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/generic_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.appcompat.widget.LinearLayoutCompat>